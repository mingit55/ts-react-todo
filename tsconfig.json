{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES5", "ES6", "DOM"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"],
      "@static/*": ["static/*"],
      "@constant/*": ["constant/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
